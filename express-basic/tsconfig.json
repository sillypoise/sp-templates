{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2022"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "baseUrl": "src",
    "paths": {
      "@app": [
        "app.ts"
      ],
      "@config": [
        "config/index.ts"
      ],
      "@config/*": [
        "config/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@server": [
        "server.ts"
      ],
      "@index": [
        "index.ts"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@logger": [
        "logger/index.ts"
      ],
      "@logger/*": [
        "logger/*"
      ],
      "@schemas/*": [
        "schemas/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
