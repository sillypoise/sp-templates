{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitOverride": true,
		"baseUrl": "src",
		"paths": {
			"@app": ["app.ts"],
			"@config/*": ["config/*"],
			"@db/*": ["db/*"],
			"@server": ["server.ts"],
			"@index": ["index.ts"],
			"@routes/*": ["routes/*"],
			"@controllers/*": ["controllers/*"],
			"@middlewares/*": ["middlewares/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"],
			"@models/*": ["models/*"],
			"@logger/*": ["logger/*"],
			"@schemas/*": ["schemas/*"]
		},
		"types": ["vitest/globals"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
